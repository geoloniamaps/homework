{
  "version": 8,
  "name": "Geolonia Homework",
  "sources": {
    "natural-earth": {
      "type": "vector",
      "url": "https://cdn.geolonia.com/tiles/natural-earth.json"
    }
  },
  "sprite": "https://sprites.geolonia.com/basic-white",
  "glyphs": "https://glyphs.geolonia.com/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "rgba(7, 17, 29, 1)"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "natural-earth",
      "source-layer": "water",
      "filter": [
        "==",
        "$type",
        "Polygon"
      ],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "rgba(18, 35, 48, 1)",
        "fill-antialias": true
      }
    },
    {
      "id": "boundary",
      "type": "line",
      "source": "natural-earth",
      "source-layer": "admin",
      "layout": {
        "line-cap": "round",
        "line-join": "round",
        "visibility": "visible"
      },
      "paint": {
        "line-color": "rgba(18, 35, 48, 1)",
        "line-width": {
          "stops": [
            [
              6,
              1
            ],
            [
              10,
              3
            ]
          ]
        }
      }
    },
    {
      "id": "airport-label",
      "type": "symbol",
      "source": "natural-earth",
      "source-layer": "airport_label",
      "layout": {
        "text-padding": 2,
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-anchor": "top",
        "icon-image": "airport-11",
        "text-field": "{name}",
        "text-offset": [
          0,
          0.6
        ],
        "text-size": 12,
        "text-max-width": 9,
        "visibility": "visible",
        "icon-size": 1,
        "text-optional": true
      },
      "paint": {
        "text-color": "#fff",
        "text-halo-width": 0.2,
        "text-halo-color": "#000000"
      }
    },
    {
      "id": "port-label",
      "type": "symbol",
      "source": "natural-earth",
      "source-layer": "port_label",
      "layout": {
        "text-padding": 2,
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-anchor": "top",
        "icon-image": "harbor-11",
        "text-field": "{name}",
        "text-offset": [
          0,
          0.6
        ],
        "text-size": 10,
        "text-max-width": 9,
        "visibility": "visible",
        "icon-size": 1,
        "text-optional": true
      },
      "paint": {
        "text-color": "#fff",
        "text-halo-width": 0.2,
        "text-halo-color": "#000000"
      }
    },
    {
      "id": "marine-label",
      "type": "symbol",
      "source": "natural-earth",
      "source-layer": "marine_label",
      "layout": {
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-field": "{name}",
        "text-size": 12,
        "text-max-width": 9
      },
      "paint": {
        "text-color": "#fff",
        "text-opacity": 0.8,
        "text-halo-width": 0.2,
        "text-halo-color": "#000000"
      }
    },
    {
      "id": "place-label",
      "type": "symbol",
      "source": "natural-earth",
      "source-layer": "place_label",
      "layout": {
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-field": "{name}",
        "text-size": 14,
        "text-max-width": 9
      },
      "paint": {
        "text-color": "#fff",
        "text-halo-width": 0.2,
        "text-halo-color": "#000000"
      }
    },
    {
      "id": "state-label",
      "type": "symbol",
      "source": "natural-earth",
      "source-layer": "state_label",
      "layout": {
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-field": "{name}",
        "text-size": 16,
        "text-max-width": 9
      },
      "paint": {
        "text-color": "#fff",
        "text-halo-width": 0.2,
        "text-halo-color": "#000000"
      }
    },
    {
      "id": "country-label",
      "type": "symbol",
      "source": "natural-earth",
      "source-layer": "country_label",
      "layout": {
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-field": "{name}",
        "text-size": 20,
        "text-max-width": 9
      },
      "paint": {
        "text-color": "#fff",
        "text-halo-width": 0.2,
        "text-halo-color": "#000000"
      }
    }
  ]
}